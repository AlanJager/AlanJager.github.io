<header>
  <h2>
    <i class="fa fa-book text-muted"></i>
    <a href="<%= config.root %>"><%= config.title %></a>
  </h2>
  <div class="header-btn">
    <div class="btn-group">
      <button type="button" class="btn btn-group-left"><i
                class="fa fa-file-text"></i> Post
      </button>
      <button type="button"
              class="btn btn-group-right"> <%= site.posts.length %> </button>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-group-left"><i
                class="fa fa-tags"></i> Post
      </button>
      <button type="button"
              class="btn btn-group-right"> <%= site.tags.length %> </button>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-group-left"><i
                class="fa fa-list-ul"></i> Post
      </button>
      <button type="button"
              class="btn btn-group-right"> <%= site.categories.length %> </button>
    </div>
  </div>
</header>
